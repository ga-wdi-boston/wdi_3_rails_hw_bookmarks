<div class="container">
   <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <hr class="divider">
      </div>
    </div>
  <% bookmarks.each do |bookmark| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <% if bookmark.is_favorite %>
          <span class="glyphicon glyphicon-ok" style="padding-right:5px;" ></span>
        <% end %>
        <h3 style="display: inline;"> <%= link_to(bookmark.title, redirect_path(bookmark.id)) %> </h3>
        <h5 class="text-right" style="display:inline; position:absolute; right: 30px; top:-5px;"><%= bookmark.category %></h5>
      </div>
    </div>
    <div class="row" style="padding: 20px 0 0px 0;">
      <div class="col-md-4 col-md-offset-5">
        <ul class="text-right list-inline">
          <li> <%= link_to("show", bookmark) %>  </li> <li><%= link_to("edit", edit_bookmark_path(bookmark)) %>  </li> <li> <%= link_to("remove", bookmark, method: :delete) %> </li>
        </ul>
      </div>
    </div>
     <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <hr class="divider">
      </div>
    </div>

  <% end %>

</div>



