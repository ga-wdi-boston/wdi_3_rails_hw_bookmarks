<%= form_for @bookmark do |f| %>

  <%= f.label :url %>
  <%= f.text_field :url %>
  <br />



  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <br />

  <%= f.label :category %>
  <%= f.select :category, Bookmark::CATEGORY, include_blank: true  %>
  <br />

  <%= f.label :is_favorite %>
  <%= f.check_box :is_favorite %>
  <br />

  <%= f.submit %>

  <% end %>

<br /> <br />

