<%= form_for @bookmark do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title %>
   <br>
   <%= f.label :url, 'URL' %>
   <%= f.text_field :url%>
   <br>
   <%= f.label :comment %>
   <%= f.text_area :comment %>
   <br>
   <%= f.label :category %>
   <%= f.select :category, Bookmark::CATEGORIES %>
   <br>
   <%= f.label :is_favorite, 'Favorite' %>
   <%= f.check_box :is_favorite %>
   <br>
   <%= f.submit class: "btn btn-success", role: "button" %>
<% end %>
