<div class='display'>
<%= form_for(@bookmark) do |f| %>
	<% if @bookmark.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

			<ul>
				<% @bookmark.errors.full_message.each do |message| %>
					<li><% message %></li>
				<% end %>
			</ul>
		</div>
<% end %>

<div class="field">
	<%= f.label :url %><br>
	<%= f.text_field :url %>
</div>

<div class="field">
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</div>

<div class="field">
	<%= f.label :comment %><br>
	<%= f.text_area :comment, size: "60x8" %>
</div>

<div class="field">
	<%= f.label :category %><br>
	<%= f.text_field :category %>
</div>

<div class="field">
	<%= f.label :checked, "Favorite" %><br>
	<%= f.check_box :checked %>
</div>

 <div>
    <%= f.submit "Add Bookmark", class: 'actions' %>
 </div>
<% end %>
</div>