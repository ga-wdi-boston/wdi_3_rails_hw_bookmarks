<% if @bookmark.errors.any? %>
<div id="error_explanation">
    <h2>
        <%= pluralize(@bookmark.errors.count, "error") %>prohibited this post from being saved:</h2>

    <ul>
        <% @bookmark.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %></li>
        <% end %></ul>
</div>
<% end %>
<div class = "form">
    <%= form_for @bookmark do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :url %>
    <br>
    <%= f.text_area :url %>
    <br>
    <%= f.label :category %>
    <br>
    <%= f.select :category, options_for_select(Bookmark::CATEGORIES) %>
    <br>
    <%= f.label :comment %>
    <br>
    <%= f.text_field :comment %>
    <br>
    <%= f.label :favorite? %>
    <br>
    <%= f.check_box :is_favorited %>
    <br>
    <%= f.submit %>
    <% end %></div>
