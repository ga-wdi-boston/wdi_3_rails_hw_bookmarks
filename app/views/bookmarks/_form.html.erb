<%= form_for @bookmark do |f| %>
<div class="row">

  <div class="col-md-6">
  &nbsp;
    <h4>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </h4>
    <h4>
      <%= f.label :url %><br>
      <%= f.text_field :url %>
    </h4>

  </div>
  <div class="col-md-6">
  &nbsp;
    <h4>
      <%= f.label :category_id %><br>
      <%= f.text_field :category_id %>
    </h4>
    <h4>
      <%= f.label :comment %><br>
      <%= f.text_field :comment %>
    </h4>
    &nbsp;
    <h4>
      <%= check_box_tag(:favorite) %>&nbsp;
      <%= label_tag(:favorite, "Favorite") %>
    </h4>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
  </div>
  <div class="col-md-6">
      <%= f.submit %>
  </div>
</div>

<% end %>

