<%= form_for bookmark do |f| %>
     <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
     </div>

     <div>
          <%= f.label :category %>
          <%= f.select :category, options_for_select(Bookmark::CATEGORIES) %>
     </div>

     <div>
          <%= f.label :url %>
          <%= f.url_field :url %>
     </div>

     <div>
          <%= f.label "Favorite" %>
          <%= f.check_box :is_favorite %>
     </div>

     <div>
          <%= f.label :comment %>
          <%= f.text_field :comment %>
     </div>

     <hr>

     <%= f.submit class: "small button right" %>
<% end %>
