<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if flash[:notice].present? %>
        <div class="alert alert-success" role="alert"> <%= flash[:notice] %> </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger" role="alert"> <%= flash[:alert] %> </div>
      <% end %>
    </div>
  </div>
  <%= form_for bookmark do |f| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: "form-control", placeholder: "Enter URL" %>
        </div>
      </div>
    </div>

   <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Title" %>
        </div>
      </div>
    </div>


   <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
          <%= f.label :comment %>
          <%= f.text_field :comment, class: "form-control", placeholder: "Enter comment" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select :category, options_for_select(Bookmark::CATEGORIES, @bookmark.category.nil? ? 0 : @bookmark.category), {}, {class: "form-control"} %>
          </div>
        </div>
      </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
          <%= f.check_box :is_favorite %>
          <%= f.label(:is_favorite, "Favorite") %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-2 col-md-offset-5">
        <div class="form-group">
          <%= f.submit class: "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
