<% if @bookmark.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

    <ul>
    <% @bookmark.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @bookmark  do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label :url, 'URL' %> <br>
    <%= f.text_field :url %> <br>
    <%= f.label :comment %> <br>
    <%= f.text_area :comment %> <br>
    <%= f.label :category %> <br>
    <%= f.radio_button  :category, 'funny' %> funny
    <%= f.radio_button :category, 'useful' %> useful
    <%= f.radio_button :category, 'serious' %> serious <br><br>
    <%= f.label :is_checked_favorite, "Love it?" %> <br>
    <%= f.check_box :is_checked_favorite %> <br><br>
    <%= f.submit %>
    <% end %>
