<div class="header">
  <ul class="pull-right">
    <li><%= link_to 'Go Back', @bookmark, class: 'btn btn-lg btn-success' %></li>
  </ul>
  <h2>Edit Bookmark</h2>
</div>
<br>
<%= form_for @bookmark, html: {class: '.navbar-form'} do |form|%>
  <p><%= form.label :title, 'Title' %>:<%= form.text_field :title, value: @bookmark[:title] %></p>
  <p><%= form.label :url, 'Url' %>:<%= form.text_field :url, value: @bookmark[:url] %></p>
  <p><%= form.label :comment, 'Comment' %>:<%= form.text_field :comment, value: @bookmark[:comment] %></p>
  <p><%= form.label :favorite, 'Favorite' %>:<%= form.check_box :favorite, checked: @bookmark[:favorite] %></p>
  <p><%= form.submit value: 'Save Bookmark', class: 'btn btn-lg btn-success' %></p>
<% end %>

