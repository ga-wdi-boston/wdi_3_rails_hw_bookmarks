<div class="page-header">
  <h1 class="hero-text-header">Manage Your Bookmarks <small>edit or delete</small></h1>
</div>
<br>

<ul class='list'>

  <% @bookmarks.each do |bookmark| %>
  <li> <%= link_to(bookmark.title, bookmark.url, :target => "_blank") %>
      <div class='btn-group'>
      <%= link_to('Edit', bookmark, :class => "btn btn-primary btn-xs") %>
      <%= link_to('Delete', bookmark, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-primary btn-xs") %>
      </div>
  </li>

  <% end %>

</ul>
<br>
<br>
<br>
<h4 class='bookmarkr'> <%= link_to('Bookmarkr', bookmarks_path) %> </h4>
