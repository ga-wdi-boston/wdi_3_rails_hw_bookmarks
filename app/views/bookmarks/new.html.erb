<%= form_for @bookmark do |f| %>
	<%= f.text_field :title, placeholder: 'Bookmark title', class: 'form-control' %>
	<%= f.text_field :url, placeholder: 'Bookmark URL', class: 'form-control' %>
	<%= f.text_field :comment, placeholder: 'Say something about this bookmark', class: 'form-control' %>
	<%= f.label :favorite, 'Is this a favorite site?' %>
	<%= f.check_box :favorite %><br>
	<%= f.submit class: 'btn btn-primary'%>
<% end %>
