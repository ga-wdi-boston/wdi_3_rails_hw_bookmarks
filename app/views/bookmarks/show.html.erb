
<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="well well-lg">

          <h2> <%= @bookmark.title %></h2><br>
        <p>
          url: <%= link_to(@bookmark.url,@bookmark.url) %>
          <br>
          " <%= @bookmark.comment %> "
          <br><br>
          We call this- <%= @bookmark.category %>
          <br><br>
          favorite?:
          <% if @bookmark.favorite %>
            <span class="glyphicon glyphicon-ok"></span><p> Yeah it is </p>
          <% else %>
            <span class="glyphicon glyphicon-remove"></span><p> Nah </p>
          <% end %>
          <br>
        </p>
      </div>

      <div class="form-actions">
        <%= link_to 'Back', bookmarks_path, :class => 'btn btn-primary btn-lg'  %>
        <%= link_to 'Edit', edit_bookmark_path, :class => 'btn btn-primary btn-lg' %>
        <%= link_to 'Delete', bookmark_path, :method => 'delete', confirm: 'Are you sure?', :class => 'btn btn-danger btn-lg' %>
      </div>
    </div>
  </div>
</div>
