
<h1><%= @bookmark.title %></h1>

<ul>
<li>Category:<%= @bookmark.category %></li>
<li>URL: <%= @bookmark.url %></li>
<li>Comment: <%= @bookmark.comment %></li>
<li>Favorite: <%= @bookmark.is_favorite %></li>
</ul>

<%= link_to 'Edit bookmark', edit_bookmark_path(@bookmark) %>
<%= link_to 'Delete bookmark', @bookmark, method: :delete,
    data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
