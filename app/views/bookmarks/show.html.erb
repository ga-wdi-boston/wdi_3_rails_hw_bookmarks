<p id="notice"><%= notice %></p>

<h2><%= @bookmark.title %></h2>

<p>
  <strong>Description:</strong>
  <%= @bookmark.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @bookmark.category %>
</p>

<p>
  <strong>Favorite:</strong>
  <%= @bookmark.favorite %>
</p>

<p>
  <strong>URL:</strong>
  <%= @bookmark.url %>
</p>

<%= link_to 'Edit Bookmark', edit_bookmark_path(@bookmark) %> | <%= link_to 'Back to Bookmarks', bookmarks_path %>


<h3>Comments</h3>

<%= render 'comment_form' %>

<hr>

<% @comments.each do |comment| %>
  <p>
    <%= comment.message %>
    <br>
    <strong><%= comment.name %></strong>
  </p>
<% end %>

