<%= link_to 'Edit this bookmark', edit_bookmark_path(@bookmark)%>
<%= link_to 'Delete bookmark', @bookmark, method: :delete, data: { confirm: 'Having second thoughts?' } %>

<h1><%= @bookmark.title %></h1>
<p><%= @bookmark.url %></p>


<ul>
  <li>Comment: <%= @bookmark.comment %></li>
  <li>Category: <%= @bookmark.category %></li>
  <% unless @bookmark.is_fav %>
  <li>Not a favorite</li>
  <% end %>
</ul>
