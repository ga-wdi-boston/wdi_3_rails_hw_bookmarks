<h1><%= @bookmark.title %></h1>
<dl>
  <dt>URL: </dt> <dd><%= @bookmark.url %></dd>
  <dt>Favorite: </dt><dd><%= @bookmark.favorite %></dd>
  <dt>Comment: </dt><dd><%= @bookmark.comment %></dd>
</dl>

<ol>
<% @bookmark.comments.each do |comment| %>
  <li><%= comment.comment %></li>
<% end %>
</ol>

<%= link_to 'Delete',
        {controller: :bookmarks, action: :destroy, id: @bookmark },
        method: :delete %>

<%= link_to 'Edit', edit_bookmark_path(@bookmark) %>
