<h2>Comments:</h2>
<ul>
<% @bookmark.comments.each do |comment| %>
  <li><%= comment.content %></li>
<% end %>
</ul>

<%= form_for @comment do |f| %>
  <%= f.hidden_field :bookmark_id %>
  <%= f.text_field :content, placeholder: "Comment" %><br>
<%= f.submit "Submit" %>
<% end %>

