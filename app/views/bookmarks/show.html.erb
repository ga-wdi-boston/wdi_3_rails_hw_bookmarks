<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if flash[:notice].present? %>
        <div class="alert alert-success" role="alert"> <%= flash[:notice] %> </div>
      <% elsif flash[:alert].present? %>
        <div class="alert alert-danger" role="alert"> <%= flash[:alert] %> </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center">
        Bookmark for <%= @bookmark.title %>
      </h3>
    </div>
  </div>
  <ul class="list-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <li class="list-group-item">
          <strong>URL: </strong> <%= @bookmark.url %>
        </li>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <li class="list-group-item">
          <strong>Title: </strong> <%= @bookmark.title %>
        </li>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <li class="list-group-item">
          <strong>Comment: </strong> <%= @bookmark.comment %>
        </li>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <li class="list-group-item">
          <strong>Favorite?: </strong> <%= @bookmark.is_favorite %>
        </li>
      </div>
    </div>


  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center"><%= link_to("Back to bookmarks", bookmarks_path) %> </h3>
    </div>
  </div>



</div>
