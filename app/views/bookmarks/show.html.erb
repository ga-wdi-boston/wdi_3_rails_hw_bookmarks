<p id="notice"><%= notice %></p>

<p>
<h2> <%= @bookmark.title %></h2>
</p>

<p>
  URL:
  <%= @bookmark.url %>
</p>

<p>
  Comment:
  <%= @bookmark.description %>
</p>

<p>
  Category:
  <%= @bookmark.category %>
</p>

