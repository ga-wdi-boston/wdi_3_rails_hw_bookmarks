<p id="notice"><%= notice %></p>

<p>
<h2> <%= @bookmark.title %></h2>
</p>

<p>
  URL:
  <%= @bookmark.url %>
</p>

<p>
  Comment:
  <%= @bookmark.comment %>
</p>

<p>
  Category:
  <%= @bookmark.category %>
</p>

<p>
  Favorited?
  <%= "yes" if @bookmark.favorite_flag == true %>
</p>


<%= form_for @comment do |f| %>

  <%= f.hidden_field :bookmark_id %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>


<%= link_to 'Edit', edit_bookmark_path(@bookmark) %>
<%= link_to 'Delete', @bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?'} %>


<%= link_to 'Back to Index', bookmarks_path %>

