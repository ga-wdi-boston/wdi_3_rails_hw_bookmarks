
<h2>
  Title: <%= @bookmark.title %>
  <br>
  url: <%= @bookmark.url %>
  <br>
  comment: <%= @bookmark.comment %>
  <br>
  category: <%= @bookmark.category %>
  <br>
  favorite: <%= @bookmark.favorite %>
