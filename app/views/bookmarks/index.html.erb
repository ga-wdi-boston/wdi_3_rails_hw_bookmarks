
<h1>Bookmark Manager</h1>

<%=link_to 'New bookmark', new_bookmark_path %>

<div class='filters'>
Category filters:
<%= link_to 'Serious', '/bookmarks/serious' %>
<%= link_to 'Useful', '/bookmarks/useful' %>
<%= link_to 'Funny', '/bookmarks/funny' %>
<%= link_to 'Uncategorized', '/bookmarks/uncategorized' %>
</div>

<ul>
<% @bookmarks.each do |bookmark| %>
<li>
    <%= link_to bookmark.title, bookmark %>
    <% if bookmark.category != nil %>
     | (<%= bookmark.category %>)
     <% else %>
     | (uncategorized)
    <% end %>
    <% if bookmark.is_favorite? %>
     | (favorite)
    <% end %>
    <% if bookmark.comment? %>
     | (comment)
    <% end %>
</li>
<% end %>
</ul>
