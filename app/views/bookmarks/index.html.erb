<h1>Bookmark List</h1>

<div class="bookmark-list">
  <table>
    <thead>
      <tr>
        <th>Bookmark</th>
        <th>Category</th>
        <th>Actions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= link_to bookmark.title, bookmark.url %></td>
          <td><%= bookmark.category %></td>
          <td>
            <%= link_to 'Show', bookmark %>
            <%= link_to 'Edit', edit_bookmark_path(bookmark) %>
            <%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
