<p id="notice"><%= notice %></p>

<h1>My Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th><%= sortable "category" %></th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.title, bookmark.url %></td>
        <td><%= bookmark.category %></td>
        <td><%= bookmark.favorite %></td>
        <td><%= link_to 'View', bookmark_path(bookmark) %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
