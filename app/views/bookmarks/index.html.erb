<div class="container">
<div class="row">
  <div class=".col-md-6">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h1>BookMarkr</h1></div>

      <!-- Table -->
      <table class="table">
        <thead>
          <tr>
            <th> Title </th>
            <th> Category </th>
            <th> Url </th>
            <th> Favorite </th>
          </tr>
        </thead>

        <tbody>
          <% @bookmarks.each do |bookmark| %>
            <tr>
              <td> <%= link_to(bookmark.title,bookmark_path(bookmark.id)) %></td>
              <td> <%= bookmark.category %> </td>
              <td> <%= bookmark.url %> </td>
              <td> <%= bookmark.favorite %> </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<%= link_to 'Make a New Bookmark!', new_bookmark_path,type:"button", class:"btn btn-success btn-large" %>
