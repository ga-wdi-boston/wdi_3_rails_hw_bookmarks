<h1>Look at alllllll my bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description?</th>
      <th>Favorited?</th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.category %></td>
        <td><%= "y" if bookmark.description != "" %></td>
        <td><%= "y" if bookmark.favorite_flag if bookmark.favorite_flag==true %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?'} %></td>
      </tr>
    <% end %>
  </tbody>
 </table>

<p>
  <%= link_to 'Add a New Bookmark', new_bookmark_path %>
</p>
