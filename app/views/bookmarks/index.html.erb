
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Bookmarks</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th class="text-center">Favorites</th>
        <th class="text-center">Comment</th>
        <th class="text-center">View Bookmark</th>
      </tr>
    </thead>
    <tbody>
      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to(bookmark.title, bookmark.url) %></td>
        <td><%= bookmark.category %></td>
        <td class="text-center"><% if bookmark[:is_favorite] %>
        <span class="glyphicon glyphicon-heart"></span>
          <% end %>
        </td>
        <td class="text-center"><% if bookmark[:comment] %>
          <span class="glyphicon glyphicon-ok"></span>
          <% end %>
        </td>
        <td class="text-center"><%= link_to("View", bookmark_path(bookmark.id)) %></td>


        <% end %>
      </tr>

    </tbody>
    </table>
  </div>
</div>
