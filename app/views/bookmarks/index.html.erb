<link rel="stylesheet" href="bookmarks/style.css"/>

<h1>Listing Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Title/URL</th>
      <th>Comment</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.title, bookmark.url %></td>
        <td><%= bookmark.comment %></td>
        
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New', new_bookmark_path %>