  <% @bookmarks.each do |bookmark| %>
  <li class="text-left">
    <p>(<%= bookmark.category %>)-- <strong><%= bookmark.title %></strong>
      <% if bookmark.favorite %>
      **
      <% end %>
      <% if bookmark.comment %>
      ^^
      <% end %>
      <%= link_to "View", new_bookmark_path, class: "view_path" %>
      </p>
    <% end %>
  </ul>

