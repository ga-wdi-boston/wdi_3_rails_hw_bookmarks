<%= stylesheet_link_tag "style.css" %>

<h1 class= "home">Your Bookmarks</h1>

<table class="center">
  <thead>
    <tr>
      <th>Title/URL</th>
      <th>Comment</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= link_to bookmark.title, bookmark.url, :target => "_blank" %></td>
        <td><%= bookmark.comment %></td>
        
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="navigation">
  <%= link_to 'New Bookmark', new_bookmark_path %>
</div>
