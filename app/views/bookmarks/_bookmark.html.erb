<hr>

<div class="bookmark_info">
  <div class="bookmark_title">
    <h3><%= link_to bookmark.title, bookmark.url, target: "blank" %></h3>
  </div>

  <div class="category">
    <h4><%= bookmark.category %></h4>
  </div>

  <div class="right">
    <ul>
      <% if bookmark.is_favorite %>
        <li class="inline"><i class="fi-star"></i> favorited</li>
      <% end %>
      <% if bookmark.comment.present? %>
        <li class="inline"><i class="fi-comment"></i> comment</li>
      <% end %>
      <li class="inline"><%= link_to edit_bookmark_path(bookmark.id) do %><i class="fi-pencil"></i> edit<% end %></li>
        <li class="inline"><%= link_to bookmark, method: :delete, data: {confirm: 'Are you sure you would like to delete the bookmark?'} do %><i class="fi-trash"></i> delete<% end %></li>
        <li class="inline"><%= link_to bookmark_path(bookmark.id) do %><i class="fi-plus"></i> more<% end %></li>
    </ul>
  </div>

 </div>
