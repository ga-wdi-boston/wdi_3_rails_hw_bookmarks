<!DOCTYPE html>
<html>
<head>
  <title>Bookmarkr | Katryn</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><span class="glyphicon glyphicon-bookmark"></span> Bookmarkr <small>by Katryn</small>
        </h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><%= link_to("All", bookmarks_path) %></li>
        <li><%= link_to("Funny", new_bookmark_path) %></li>
        <li><%= link_to("Serious", new_bookmark_path) %></li>
        <li><%= link_to("Useful", new_bookmark_path) %></li>
      </ul>
      <%= link_to("Create new", new_bookmark_path, class: "btn btn-danger btn-md nav-justified") %>
    </div>

    <div class="col-md-6">
      <%= yield %>
    </div>

    <div class="col-md-4">
    <% if flash[:notice].present? %>
      <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
    <% end %>
    <p class="alert"><%= flash[:alert] %></p>
    </div>
</div>

</body>
</html>
